<%
const body = `
<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-xl-11">

            <!-- Cabecera -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1"><i class="bi bi-journal-medical text-primary"></i> Historial de Proyecciones Dentales</h2>
                    <p class="text-muted mb-0">Visualiza todas las proyecciones generadas en el sistema</p>
                </div>
                <a href="/proyecciones/nueva" class="btn btn-success btn-lg shadow-sm">
                    <i class="bi bi-plus-circle-fill"></i> Nueva Proyección
                </a>
            </div>

            <!-- Tarjetas de Estadísticas -->
            <div class="row g-4 mb-5">
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm bg-gradient-primary text-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <i class="bi bi-tooth fs-1 opacity-75"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">${estadisticas.total_proyecciones || 0}</h3>
                                <p class="mb-0 opacity-90">Total Proyecciones</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm bg-gradient-info text-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <i class="bi bi-wrench-adjustable fs-1 opacity-75"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">${estadisticas.total_ortodoncia || 0}</h3>
                                <p class="mb-0 opacity-90">Ortodoncia</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm bg-gradient-purple text-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <i class="bi bi-stars fs-1 opacity-75"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">${estadisticas.total_carillas || 0}</h3>
                                <p class="mb-0 opacity-90">Carillas</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm bg-gradient-success text-white">
                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <i class="bi bi-bar-chart-line fs-1 opacity-75"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">${estadisticas.proyecciones_activas || 0}</h3>
                                <p class="mb-0 opacity-90">Activas</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filtros -->
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-funnel-fill text-primary"></i> Filtros</h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="/proyecciones/historial" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label"><strong>Tipo de Tratamiento</strong></label>
                            <select name="tipo_tratamiento" class="form-select">
                                <option value="">Todos</option>
                                <option value="ortodoncia" ${filtros.tipo_tratamiento === 'ortodoncia' ? 'selected' : ''}>Ortodoncia</option>
                                <option value="carillas" ${filtros.tipo_tratamiento === 'carillas' ? 'selected' : ''}>Carillas</option>
                            </select>
                        </div>
                        <div class="col-md-8 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                            <a href="/proyecciones/historial" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Limpiar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Grid de Proyecciones -->
            <div class="row g-4">
                ${proyecciones && proyecciones.length > 0 ? proyecciones.map(proyeccion => `
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm proyeccion-card">
                            <div class="position-relative overflow-hidden rounded-top" style="height: 180px;">
                                <img src="${proyeccion.ruta_imagen_procesada}" 
                                     alt="Proyección ${proyeccion.tipo_tratamiento}" 
                                     class="card-img-top h-100 w-100" 
                                     style="object-fit: cover;" loading="lazy">
                                <div class="position-absolute top-0 end-0 p-2">
                                    <span class="badge rounded-pill bg-${proyeccion.tipo_tratamiento === 'ortodoncia' ? 'info' : 'purple'}">
                                        ${proyeccion.tipo_tratamiento.toUpperCase()}
                                    </span>
                                </div>
                                
                                <div class="image-overlay position-absolute inset-0 bg-dark bg-opacity-50 d-flex align-items-center justify-content-center opacity-0 transition-opacity">
                                    <a href="/proyecciones/${proyeccion.id}" class="btn btn-light btn-sm">
                                        <i class="bi bi-eye"></i> Ver Detalles
                                    </a>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-3">${proyeccion.nombre_paciente}</h5>
                                <div class="small text-muted mb-3">
                                    <div class="d-flex justify-content-between"><span>CI:</span> <strong>${proyeccion.ci}</strong></div>
                                    <div class="d-flex justify-content-between"><span>Intensidad:</span> <strong>${proyeccion.intensidad}%</strong></div>
                                    <div class="d-flex justify-content-between"><span>Duración:</span> <strong>${proyeccion.duracion_estimada || 'N/A'}</strong></div>
                                    <div class="d-flex justify-content-between"><span>Fecha:</span> <strong>${new Date(proyeccion.fecha_proyeccion).toLocaleDateString('es-BO')}</strong></div>
                                </div>
                                <p class="text-muted small flex-grow-1">
                                    ${proyeccion.diagnostico ? proyeccion.diagnostico.substring(0, 100) + '...' : 'Sin diagnóstico'}
                                </p>
                            </div>
                            <div class="card-footer bg-light d-flex gap-2">
                                <a href="/proyecciones/${proyeccion.id}" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a href="/proyecciones/${proyeccion.id}/descargar" class="btn btn-sm btn-success flex-fill">
                                    <i class="bi bi-download"></i> Descargar
                                </a>
                                <a href="/pacientes/${proyeccion.paciente_id}/perfil" class="btn btn-sm btn-outline-info flex-fill">
                                    <i class="bi bi-person"></i> Paciente
                                </a>
                            </div>
                        </div>
                    </div>
                `).join('') : `
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="bi bi-tooth fs-1 text-muted d-block mb-3"></i>
                            <h4 class="text-muted">No hay proyecciones registradas</h4>
                            <p class="text-muted">Comienza generando la primera proyección dental</p>
                            <a href="/proyecciones/nueva" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i> Crear Primera Proyección
                            </a>
                        </div>
                    </div>
                `}
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary { background: linear-gradient(135deg, #0d6efd, #0a58ca) !important; }
    .bg-gradient-info { background: linear-gradient(135deg, #0dcaf0, #0aa2c0) !important; }
    .bg-gradient-purple { background: linear-gradient(135deg, #6f42c1, #5a2d91) !important; }
    .bg-gradient-success { background: linear-gradient(135deg, #198754, #146c43) !important; }
    .proyeccion-card:hover .image-overlay { opacity: 1 !important; }
    .proyeccion-card img { transition: transform 0.3s ease; }
    .proyeccion-card:hover img { transform: scale(1.05); }
    .transition-opacity { transition: opacity 0.3s ease; }
</style>
`;
%>

<%- include('../layouts/main', { title: title, body: body }) %>