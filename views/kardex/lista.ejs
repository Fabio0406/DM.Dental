<% 
const body = `
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3><i class="bi bi-journal-text"></i> Kardex de Insumos</h3>
                    <p class="text-muted mb-0">Control de movimientos de inventario</p>
                </div>
                <a href="/dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Dashboard
                </a>
            </div>
        </div>
    </div>

    ${locals.error ? `
        <div class="alert alert-danger alert-dismissible fade show">
            ${error}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    ` : ''}

    <!-- Buscador -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" action="/kardex" class="row g-3">
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="buscar" 
                                   placeholder="Buscar por código o nombre del insumo..." 
                                   value="${termino || ''}" autofocus>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Leyenda de prioridad -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex gap-3 align-items-center">
                <small class="text-muted"><strong>Prioridad:</strong></small>
                <span class="badge bg-danger"><i class="bi bi-circle-fill"></i> Crítico (&lt;10%)</span>
                <span class="badge bg-warning text-dark"><i class="bi bi-circle-fill"></i> Bajo (10-30%)</span>
                <span class="badge bg-success"><i class="bi bi-circle-fill"></i> Normal (&gt;30%)</span>
            </div>
        </div>
    </div>

    <!-- Tabla de insumos -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-box-seam"></i> Insumos (${insumos.length})</h6>
                </div>
                <div class="card-body p-0">
                    ${insumos.length === 0 ? `
                        <div class="text-center py-5">
                            <h5 class="text-muted">No se encontraron insumos</h5>
                            ${termino ? `<p class="text-muted">Intenta con otro término de búsqueda</p>` : ''}
                        </div>
                    ` : `
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Estado</th>
                                        <th>Código</th>
                                        <th>Insumo</th>
                                        <th>Stock Actual</th>
                                        <th>Kardex Activo</th>
                                        <th>Gestión</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${insumos.map(insumo => {
                                        let badgeClass = 'success';
                                        let icon = '<i class="bi bi-circle-fill"></i>';
                                        let porcentaje = insumo.porcentaje_stock || 0;
                                        
                                        if (porcentaje < 10) {
                                            badgeClass = 'danger';
                                            icon = '<i class="bi bi-circle-fill"></i>';
                                        } else if (porcentaje < 30) {
                                            badgeClass = 'warning text-dark';
                                            icon = '<i class="bi bi-circle-fill"></i>';
                                        }
                                        
                                        return `
                                            <tr>
                                                <td>
                                                    <span class="badge bg-${badgeClass}">${icon}</span>
                                                </td>
                                                <td>
                                                    <code>${insumo.codigo}</code>
                                                </td>
                                                <td>
                                                    <strong>${insumo.nombre_generico}</strong>
                                                    ${insumo.presentacion ? `<br><small class="text-muted">${insumo.presentacion}</small>` : ''}
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary">${insumo.aplicaciones_disponibles}</span>
                                                    <small class="text-muted">aplicaciones</small>
                                                </td>
                                                <td>
                                                    ${insumo.numero_kardex ? `
                                                        <span class="badge bg-info text-dark">${insumo.numero_kardex}</span>
                                                    ` : `
                                                        <span class="text-muted">Sin Kardex</span>
                                                    `}
                                                </td>
                                                <td>
                                                    ${insumo.gestion ? `
                                                        <strong>${insumo.gestion}</strong>
                                                    ` : `
                                                        <span class="text-muted">-</span>
                                                    `}
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm">
                                                        ${insumo.abierto? `
                                                            <a href="/kardex/ver/${insumo.id_insumo}" 
                                                               class="btn btn-primary" 
                                                               title="Ver Kardex Actual">
                                                                <i class="bi bi-file-earmark-text"></i> Kardex
                                                            </a>
                                                        ` : `
                                                            <button class="btn btn-secondary" disabled>
                                                                Sin Kardex
                                                            </button>
                                                        `}
                                                        <a href="/kardex/historial/${insumo.id_insumo}" 
                                                           class="btn btn-outline-secondary"
                                                           title="Ver Historial">
                                                            <i class="bi bi-journal-medical"></i> Historial
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        `;
                                    }).join('')}
                                </tbody>
                            </table>
                        </div>
                    `}
                </div>
            </div>
        </div>
    </div>
</div>
`;
%>

<%- include('../layouts/main', { title: title, body: body }) %>