<%
const formatearFecha = (fecha) => {
    if (!fecha) return 'N/A';
    const d = new Date(fecha);
    const dia = String(d.getDate()).padStart(2, '0');
    const mes = String(d.getMonth() + 1).padStart(2, '0');
    const anio = d.getFullYear();
    return `${dia}/${mes}/${anio}`;
};

const formatearMoneda = (valor) => {
    return new Intl.NumberFormat('es-BO', { 
        style: 'currency', 
        currency: 'BOB',
        minimumFractionDigits: 2 
    }).format(valor || 0);
};

const body = `
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3><i class="bi bi-file-earmark-text"></i> Kardex Valorado</h3>
                    <p class="text-muted mb-0">${kardex.nombre_generico}</p>
                </div>
                <div class="btn-group">
                    <a href="/kardex/historial/${kardex.id_insumo}" class="btn btn-outline-primary">
                        <i class="bi bi-journal-medical"></i> Ver Historial
                    </a>
                    <a href="/kardex" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Información del Kardex -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-journal-text"></i> Información del Kardex</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Código:</strong><br>
                            <code class="fs-5">${kardex.codigo}</code>
                        </div>
                        <div class="col-md-3">
                            <strong>Número de Kardex:</strong><br>
                            <span class="badge bg-info fs-6">${kardex.numero_kardex}</span>
                        </div>
                        <div class="col-md-2">
                            <strong>Gestión:</strong><br>
                            <span class="fs-5">${kardex.gestion}</span>
                        </div>
                        <div class="col-md-2">
                            <strong>Fecha Apertura:</strong><br>
                            ${formatearFecha(kardex.fecha_apertura)}
                        </div>
                        <div class="col-md-2">
                            <strong>Responsable:</strong><br>
                            ${responsable || 'N/A'}
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de movimientos (Kardex Valorado) -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-bar-chart-line"></i> Movimientos del Kardex</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm mb-0" style="font-size: 0.85rem;">
                            <thead class="table-light">
                                <tr class="text-center">
                                    <th rowspan="2" style="vertical-align: middle;">FECHA</th>
                                    <th rowspan="2" style="vertical-align: middle;">N° Y CLAVE<br>DOC</th>
                                    <th colspan="3">MOVIMIENTOS EN APLICACIONES</th>
                                    <th rowspan="2" style="vertical-align: middle;">SALDO</th>
                                    <th rowspan="2" style="vertical-align: middle;">N° LOTE</th>
                                    <th rowspan="2" style="vertical-align: middle;">FECHA VTO</th>
                                    <th rowspan="2" style="vertical-align: middle;">COSTO<br>UNITARIO</th>
                                    <th rowspan="2" style="vertical-align: middle;">SALDO<br>VALORIZADO</th>
                                    <th rowspan="2" style="vertical-align: middle;">RECIBIDO DE /<br>EXPEDIDO POR</th>
                                </tr>
                                <tr class="text-center">
                                    <th>ENTRADA</th>
                                    <th>SALIDA</th>
                                    <th>AJUSTES<br>(+/-)</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${kardex.movimientos && kardex.movimientos.length > 0 ? kardex.movimientos.map(mov => `
                                    <tr>
                                        <td class="text-center">${formatearFecha(mov.fecha)}</td>
                                        <td class="text-center">
                                            <small>${mov.clave_doc || '-'}</small>
                                        </td>
                                        <td class="text-end ${mov.entradas > 0 ? 'bg-success bg-opacity-10' : ''}">
                                            ${mov.entradas > 0 ? mov.entradas : '-'}
                                        </td>
                                        <td class="text-end ${mov.salidas > 0 ? 'bg-danger bg-opacity-10' : ''}">
                                            ${mov.salidas > 0 ? mov.salidas : '-'}
                                        </td>
                                        <td class="text-end ${mov.ajustes != 0 ? 'bg-warning bg-opacity-10' : ''}">
                                            ${mov.ajustes != 0 ? (mov.saldo_valorado = 0 ? '+' : '-') + mov.ajustes : '-'}
                                        </td>
                                        <td class="text-end">
                                            <strong>${mov.saldo}</strong>
                                        </td>
                                        <td class="text-center">
                                            <small><code>${mov.numero_lote || '-'}</code></small>
                                        </td>
                                        <td class="text-center">
                                            <small>${formatearFecha(mov.fecha_vencimiento)}</small>
                                        </td>
                                        <td class="text-end">
                                            <small>${formatearMoneda(mov.costo_unitario)}</small>
                                        </td>
                                        <td class="text-end">
                                            <strong>${formatearMoneda(mov.saldo_valorado)}</strong>
                                        </td>
                                        <td>
                                            <small>
                                                ${mov.entradas != 0  ? 
                                                    `<strong>De:</strong> ${mov.recibido_de || 'FIM'}` : 
                                                    `<strong>Por:</strong> ${responsable}`
                                                }
                                            </small>
                                        </td>
                                    </tr>
                                `).join('') : `
                                    <tr>
                                        <td colspan="11" class="text-center py-4">
                                            <p class="text-muted mb-0">No hay movimientos registrados en este Kardex</p>
                                        </td>
                                    </tr>
                                `}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón para exportar (futuro) -->
    <div class="row mt-3">
        <div class="col-12 text-end">
            <button class="btn btn-success" disabled>
                <i class="bi bi-file-earmark-pdf"></i> Exportar a PDF (Próximamente)
            </button>
            <button class="btn btn-success" disabled>
                <i class="bi bi-file-earmark-excel"></i> Exportar a Excel (Próximamente)
            </button>
        </div>
    </div>
</div>
`;
%>

<%- include('../layouts/main', { title: title, body: body }) %>